.col-xs-12
  .row
    .col-md-6.col-xs-6
      .center
        = image_tag("carousel1.png", class: "carousel-img")
    .col-md-6.col-xs-6
      .center
        = image_tag("carousel2.png", class: "carousel-img")

  .row.white_gray_gradient
    .col-md-6.col-xs-6
      .row
        .col-md-4.col-md-offset-4
          %hr
      .center
        %strong.carousel-caption-title
          = "AR App Development"
      .row
        .col-md-4.col-md-offset-4
          %p.carousel-caption-desc.center
            = "We help you build the perfect mobile AR app for your business. From enterprise apps to AR games."
      .center.inquire-btn
        = link_to "Inquire Now", "#contact-us-top", class: "btn btn-lg btn-primary"
    .col-md-6.col-xs-6
      .row
        .col-md-4.col-md-offset-4
          %hr
      .center
        %strong.carousel-caption-title
          = "AR Hosting"
      .row
        .col-md-4.col-md-offset-4
          %p.carousel-caption-desc.center
            = "We craft compelling AR experiences for your product and make it accessible to all."
      .center.inquire-btn
        = link_to "Inquire Now", "#contact-us-top", class: "btn btn-lg btn-primary"

:javascript
  $('.inquire-btn a').click(function() {
      $root.animate({
        scrollTop: $( $.attr(this, 'href') ).offset().top
      }, 500);
      return false;
  });
