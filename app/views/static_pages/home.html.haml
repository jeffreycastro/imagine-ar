#learnmore-div
  .col-xs-12
    .center.jumbotron
      .learnmore-title
        %h1 AR. VR. GAMES.
        = link_to "LEARN MORE", "", class: "btn btn-lg btn-primary learnmore-link"

#imagineers-div
  .col-xs-12
    .center.jumbotron
      .imagineers-title
        .weare
          %h1
            = "WE ARE"
            %strong= "IMAGINEERS"
          = image_tag("butterfly.png")
      %p
        = "We seek to inspire and innovate by harnessing the prowess of"
      %p
        = "cutting-edge technology, digital graphics and playful arts."

#whatwedo-div
  .col-xs-12
    .jumbotron
      .whatwedo-title
        %h1
          ="WHAT"
          %strong="WE DO"

#augreality-div
  .col-xs-12
    .center.jumbotron
      .augreality-title
        %h1 Augmented Reality
      %p
        "We augment your dreams to life."

#media-div
  .col-xs-12
    .center
      .yt-container
        = content_tag(:iframe, nil, src: "https://www.youtube.com/embed/oH_LfXnklRw", frameborder: "0", webkitallowfullscreen: '',  mozallowfullscreen: '', allowfullscreen: '', class: 'yt-video')

.col-xs-12#media-desc-div
  .center
    %p= "Breathe life to your products and make them accesible to"
    %p= "thousands of users through our mobile AR platform"
    %br/
    %p= "Engage your audience with interactive 3D experiences"
    %p= "superimposed on the product itself."
